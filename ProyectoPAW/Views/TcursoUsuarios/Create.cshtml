@model ProyectoPAW.Models.TcursoUsuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Agregar Usuario al Curso</h2>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label">Curso</label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Estudiante</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <br />
            <div class="form-group text-center">
                    <a asp-action="Index" class="btn btn-default px-3 me-2">Volver a la lista</a>
                    <input type="submit" value="Create" class="btn" style="background-color: #9c3840; color: white;" />
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
