@model IEnumerable<ProyectoPAW.Models.TcursoUsuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<p>
    <a asp-action="Create">Agregar usuarios al curso</a>
</p>



<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Curso.Nombre)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Usuario.Nombre)</p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <br />
                    <form asp-action="Delete" asp-route-cursoId="@item.CursoId" asp-route-recetaId="@item.UsuarioId" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta usuario del curso?');">
                        <button type="submit" class="btn btn-link">Eliminar</button>
                    </form>

                </div>
            </div>
        </div>
    }
</div>



