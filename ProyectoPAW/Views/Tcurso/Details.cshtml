@model ProyectoPAW.Models.Tcurso
@using System.Security.Claims

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h1>Detalles del Curso</h1>
<hr />
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre) @Html.DisplayFor(model => model.Usuario.Apellidos)
        </dd>
    </dl>
</div>
<br />
<div class="text-center">
    @if (User.IsInRole("Profesor") || User.IsInRole("Administrador"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-default px-3 me-2">Modificar</a>
    }
    <a asp-action="Index" class="btn btn-default px-3 me-2">Volver</a>
</div>
