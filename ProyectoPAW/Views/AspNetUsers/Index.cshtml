@model IEnumerable<ProyectoPAW.Models.AspNetUser>

@{
    ViewData["Title"] = "Lista Usuarios";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Lista de Usuarios</h2>

<p>
    <a class="btn" style="background-color: #9c3840; color: white;" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar Usuario</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Roles</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @foreach (var role in item.Roles)
                    {
                        <span>@role.Name</span>
                    }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default px-3 me-2">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default px-3 me-2">Detalles</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default px-3 me-2">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
